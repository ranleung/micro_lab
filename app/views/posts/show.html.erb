



<div class="container">
	
	<div class="jumbotron">
		<div class="row">
			<h2>Posts by User </h2>
				<h3><%= @post.title %></h3>
				<p><%= @post.body %></p>
		</div>

		<h3>Comments</h3>
		<div class="row">
			<% @comments.each do |comment| %>
