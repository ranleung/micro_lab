

<div class="container">



	<h1>Edit your info:</h1>

	<div class="row">

		<%= form_for @user do |f| %>
			<p>First Name:
			<%= f.text_field :first_name, placeholder: "firstname" %></p><br>
			<p>Last Name:
			<%= f.text_field :last_name, placeholder: "lastname" %></p><br>
			<p>Email:
			<%= f.text_field :email, placeholder: "email" %></p><br>
			<p>Image Url:
			<%= f.text_field :image_url, placeholder: "img url" %></p><br>
			<%= f.submit "Save"%>
		<% end %>

		<button>
			<a href="/users/<%=@user.id%>">Go Back</a>
		</button>

	</div>
</div>